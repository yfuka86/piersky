<div class='title'>
  <%= t('auth.title.reset_password') %>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, t('auth.label.email') %>
    <%= f.email_field :email, autofocus: true, placeholder: DeviseHelper::EMAIL_EXAMPLE %>
  </div>

  <div class="actions">
    <%= f.submit t('auth.submit.normal') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

