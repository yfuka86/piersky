<div class='notification-container'>
  <% if devise_error_messages? || flash[:alert].present? %>
    <div class='errors'>
      <%= devise_error_messages! %>
      <div class='notification-message-box'>
        <%= flash[:alert] %>
      </div>
    </div>
  <% elsif flash[:success].present? %>
    <div class='successes'>
      <div class='notification-message-box'>
        <%= flash[:success] %>
      </div>
    </div>
  <% elsif flash[:notice].present? %>
    <div class='infos'>
      <div class='notification-message-box'>
        <%= flash[:notice] %>
      </div>
    </div>
  <% end %>
</div>