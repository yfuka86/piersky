<div id='daily-mail'>
  <table>
    <tbody>
      <tr>
        <td>
          <div>
            <%= image_tag @presenter.graph[:image].presence || image_url("welcome_bg.png"), class: 'main-graph' %>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <div class='legends'>
            <%= @presenter.graph[:legends].html_safe %>
          </div>
          <table id='users-list'>
            <% @presenter.users.map do |user| %>
              <%= render 'summary_mailer/daily/user', user_team: user[:user_team], user: user[:user_team].user, identities: user[:identities] %>
            <% end %>
          </table>
        </td>
      </tr>
      <tr>
        <td>
          <p>
            Can't you see your team mate in this mail? Invite your team member!!
          </p>

          <p class='center' style="margin:2rem 0">
            <%= link_to 'Get started', confirmation_url(@resource, confirmation_token: @token), class: 'main-button', target: '_blank' %>
          </p>
        </td>
      </tr>
    </tbody>
  </table>
</div>