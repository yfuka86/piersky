<div class='auth-links'>
  <%- if controller_name != 'sessions' %>
    <%= link_to t('auth.link.sign_in'), new_session_path(resource_name) %>
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to t('auth.link.sign_up'), new_registration_path(resource_name) %>
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to t('auth.link.password'), new_password_path(resource_name) %>
  <% end -%>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to t('auth.link.resend_unlock_instruction'), new_unlock_path(resource_name) %>
  <% end -%>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to "login with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %>
    <% end -%>
  <% end -%>
</div>
