<div class='title'>
  <%= t('auth.title.resend_unlock_instruction') %>
</div>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <div class="field">
    <%= f.label :email, t('auth.label.email') %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit t('auth.link.resend_unlock_instruction') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
